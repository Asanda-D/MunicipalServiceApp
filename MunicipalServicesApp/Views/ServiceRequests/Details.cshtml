@model MunicipalServicesApp.Models.ServiceRequest
@{
    ViewData["Title"] = "Service Request Details";
}

<h2>@Model.Title</h2>

<table class="table">
    <tr><th>ID</th><td>@Model.Id</td></tr>
    <tr><th>Category</th><td>@Model.Category</td></tr>
    <tr><th>Location</th><td>@Model.Location</td></tr>
    <tr><th>Status</th><td>@Model.Status</td></tr>
    <tr><th>Priority</th><td>@Model.Priority</td></tr>
    <tr><th>Submitted At</th><td>@Model.SubmittedAt.ToString("g")</td></tr>
    <tr><th>Description</th><td>@Model.Description</td></tr>
    @if (!string.IsNullOrEmpty(Model.AttachmentPath))
    {
        <tr><th>Attachment</th><td><a href="@Model.AttachmentPath" target="_blank">View</a></td></tr>
    }
</table>

<a class="btn btn-primary" href="@Url.Action("Index", "ServiceRequests")">Back</a>