@model MunicipalServicesApp.Models.ServiceRequest

@{
    ViewData["Title"] = "Delete Service Request";
}

<h2 class="text-danger">Delete Service Request</h2>

<div class="alert alert-warning">
    <strong>Warning:</strong> You are about to permanently delete this request.
</div>

<table class="table table-bordered">
    <tr><th>ID</th><td>SR@Model.Id</td></tr>
    <tr><th>Title</th><td>@Model.Title</td></tr>
    <tr><th>Description</th><td>@Model.Description</td></tr>
    <tr><th>Status</th><td>@Model.Status</td></tr>
    <tr><th>Priority</th><td>@Model.Priority</td></tr>
    <tr><th>Submitted At</th><td>@Model.SubmittedAt.ToString("g")</td></tr>
</table>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>